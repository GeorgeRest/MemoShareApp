<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_launcher"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_username"
                android:layout_toRightOf="@id/tv_username"
                android:text="发布于:12:00"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="深圳市万科云城设计公社"
                android:textSize="10sp"
                android:layout_alignBottom="@+id/tv_time"
                android:layout_toRightOf="@id/tv_time"/>
        </RelativeLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:text="用户发表文本内容" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_images"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_below="@id/tv_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:scrollbarStyle="outsideOverlay"/>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@id/rv_images"
            android:layout_alignLeft="@id/rv_images"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:src="@mipmap/recoder" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:src="@mipmap/like"
            android:layout_marginTop="15dp"
            android:layout_below="@id/rv_images"
            android:layout_toLeftOf="@id/chat"/>
        <ImageView
            android:id="@+id/chat"
            android:layout_width="25dp"
            android:layout_height="21dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/comment"
            android:layout_marginTop="15dp"
            android:layout_below="@id/rv_images"
            android:layout_alignRight="@id/rv_images"/>


    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
