<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- TODO: Update blank fragment layout -->



      <EditText
          android:id="@+id/et_group_chat"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:layout_marginRight="5dp"
          android:gravity="center_vertical"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:paddingHorizontal="10dp"
          android:background="@drawable/group_chat_editext" />

    <RelativeLayout
        android:id="@+id/rl_group_chat_text_send"
        android:layout_marginTop="10dp"
        android:layout_width="70dp"
        android:layout_height="30dp">

        <ImageView
            android:id="@+id/iv_group_chat_text_send"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/group_chat_send_pic" />

        <TextView
            android:id="@+id/tv_group_chat_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发送"
            android:textColor="@color/white"
            android:visibility="invisible" />


    </RelativeLayout>


</LinearLayout>