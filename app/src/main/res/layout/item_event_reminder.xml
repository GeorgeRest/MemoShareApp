<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="给可乐买猫粮"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(提醒seven)"
            android:textColor="@color/remind_time"
            android:textSize="@dimen/remind_time"
            android:layout_toRightOf="@+id/content"
            android:layout_alignBottom="@+id/content"
            />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒时间："
            android:textSize="@dimen/remind_time"
            android:textColor="@color/remind_time"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_time"
            android:text="13:00"
            android:textColor="@color/remind_time"
            android:textSize="@dimen/remind_time" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/view_interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒间隔："
            android:textSize="@dimen/remind_time"
            android:textColor="@color/remind_time"/>

        <TextView
            android:id="@+id/interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10分钟"
            android:layout_toRightOf="@+id/view_interval"
            android:textSize="@dimen/remind_time"
            android:textColor="@color/remind_time"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/view_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注："
            android:textSize="@dimen/remind_time"
            android:textColor="@color/remind_time"/>

        <TextView
            android:id="@+id/remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            android:layout_toRightOf="@+id/view_remark"
            android:textSize="@dimen/remind_time"
            android:textColor="@color/remind_time"/>

    </RelativeLayout>

</LinearLayout>