<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="20dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="40dp"
    android:paddingLeft="40dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="给可乐买猫粮"
            android:textSize="23dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(提醒seven)"
            android:textColor="@color/remind_time"
            android:textSize="@dimen/remind_time"
            android:layout_toEndOf="@+id/content"
            android:layout_alignBottom="@+id/content"
            android:paddingLeft="5dp"
            />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#80252527"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒时间："
            android:textSize="@dimen/remind_time"
            android:textColor="@color/remind_time"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_time"
            android:text="13:00"
            android:textColor="@color/remind_time"
            android:textSize="@dimen/remind_time" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="1dp">

        <TextView
            android:id="@+id/view_interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒间隔："
            android:textSize="@dimen/remind_time"
            android:textColor="@color/remind_time"/>

        <TextView
            android:id="@+id/interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10分钟"
            android:layout_toRightOf="@+id/view_interval"
            android:textSize="@dimen/remind_time"
            android:textColor="@color/remind_time"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/view_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注："
            android:textSize="@dimen/remind_time"
            android:textColor="@color/remind_time"/>

        <TextView
            android:id="@+id/note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            android:layout_toRightOf="@+id/view_note"
            android:textSize="@dimen/remind_time"
            android:textColor="@color/remind_time"/>

    </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>