<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentScrim="@color/primary_light"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/fruit_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/horizental_photo1"
                app:layout_collapseMode="parallax" />
            <ImageView
                android:id="@+id/iv_vertor"
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/personhomepage_vector_drawable"
                app:layout_collapseMode="pin" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/person_toolbar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_collapseMode="pin">


            </androidx.appcompat.widget.Toolbar>












            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.george.memoshareapp.view.NiceImageView
                    android:src="@drawable/white_head"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="63dp"
                    android:layout_marginTop="58dp"
                    />

                <com.george.memoshareapp.view.NiceImageView
                    android:id="@+id/person_fragment_iv_head"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="65.3dp"
                    android:layout_marginTop="60dp"
                    android:src="@mipmap/head_portrait" />
                <ImageView
                android:id="@+id/person_fragment_iv_attention"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/attention"/>
                <TextView
                    android:id="@+id/person_fragment_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="65dp"
                    android:text="YIGE"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/person_fragment_tv_mingyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/person_fragment_iv_head"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@id/person_fragment_iv_head"
                    android:text="欢迎来到一格的世界"
                    android:textColor="@color/white"
                    android:textSize="13dp" />
                <TextView
                android:id="@+id/person_fragment_tv_guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/person_fragment_tv_mingyan"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:text="关注"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/person_fragment_tv_guanzhu_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/person_fragment_tv_mingyan"
                    android:layout_marginLeft="152dp"
                    android:layout_marginTop="35dp"
                    android:text="324"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/person_fragment_tv_mingyan"
                    android:layout_marginLeft="188dp"
                    android:layout_marginTop="15dp"
                    android:text="|"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/person_fragment_tv_fensi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/person_fragment_tv_mingyan"
                    android:layout_marginLeft="203dp"
                    android:layout_marginTop="20dp"
                    android:text="粉丝"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/person_fragment_tv_fensi_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/person_fragment_tv_mingyan"
                    android:layout_marginLeft="203dp"
                    android:layout_marginTop="35dp"
                    android:text="463"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/person_fragment_iv_menu"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/menu"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="fill" />

    </com.google.android.material.appbar.AppBarLayout>

