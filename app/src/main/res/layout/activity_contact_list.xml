<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ContactListActivity"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:onClick="onClick"
            android:src="@mipmap/back_register" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:maxWidth="200dp"
            android:text="联系人"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>


    <SearchView
        android:id="@+id/sv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lv_contact_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="12" />

        <ListView
            android:id="@+id/lv_ABC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/letters_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/navigationA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A" />

            <TextView
                android:id="@+id/navigationB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B" />

            <TextView
            android:id="@+id/navigationC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C" />

            <TextView
