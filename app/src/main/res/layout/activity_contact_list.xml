                android:text="H" />
            <TextView
                android:id="@+id/navigationI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I" />

            <TextView
                android:id="@+id/navigationJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="J" />

            <TextView
                android:id="@+id/navigationK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="K" />
            <TextView
                android:id="@+id/navigationL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L" />
            <TextView
                android:id="@+id/navigationM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M" />
            <TextView
