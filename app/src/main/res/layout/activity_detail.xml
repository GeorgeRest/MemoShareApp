<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="共"-->
<!--                    android:textColor="@color/primary_text"-->
<!--                    android:textSize="10dp"/>-->
<!--                <TextView-->
<!--                    android:id="@+id/detail_tv_comment_count"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="XX"-->
<!--                    android:layout_centerHorizontal="true"-->
<!--                    android:textColor="@color/primary_text"-->
<!--                    android:textSize="10dp"/>-->
<!--                <TextView-->
<!--                    android:layout_toRightOf="@id/detail_tv_comment_count"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="条评论"-->
<!--                    android:textColor="@color/primary_text"-->

<!--                    android:textSize="10dp"/>-->

<!--            </RelativeLayout>-->


            <TextView
                android:id="@+id/tv_comments_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共xx条评论"
                android:layout_gravity="center" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fcv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/detail_iv_share"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share"/>
            <TextView
                android:id="@+id/detail_tv_share_number"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#403D3D"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/detail_iv_comment"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/comment_button"/>
            <TextView
                android:id="@+id/detail_tv_comment_number"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#403D3D"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/detail_iv_like"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/like"/>
            <TextView
                android:id="@+id/detail_tv_like_number"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#403D3D"/>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>




