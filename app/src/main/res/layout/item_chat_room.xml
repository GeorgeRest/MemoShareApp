<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/chat_RL"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:paddingTop="7dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <com.george.memoshareapp.view.NiceImageView
            android:id="@+id/iv_chatroom_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"

            android:src="@mipmap/message_comment"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_chatroom_name"
            android:text="hhhhh"
            android:textSize="16dp"
            android:textColor="#2f2f34"
            android:layout_toRightOf="@id/iv_chatroom_photo"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_chatroom_last_message"
            android:layout_toRightOf="@id/iv_chatroom_photo"
            android:textSize="15dp"
            android:text="你好啊"
            android:ellipsize="end"
            android:textColor="#97959a"
            android:layout_alignBottom="@id/iv_chatroom_photo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_chatroom_last_message_time"
            android:text="10：23"
            android:textSize="13dp"
            android:textColor="#97959a"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/iv_group"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ic_group"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/tv_chatroom_last_message_time"
            android:layout_marginBottom="25dp" />
    </RelativeLayout>






</RelativeLayout>