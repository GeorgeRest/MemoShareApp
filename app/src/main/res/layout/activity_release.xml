<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F4FA">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@mipmap/release_bg">

        <ImageView
            android:id="@+id/release_back"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_register" />

        <ImageView
            android:id="@+id/release_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/release_buttton" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                ><EditText
                    android:id="@+id/release_edit"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="分享新鲜事..."
                    android:background="@null"/>
                <ImageView
                    android:id="@+id/picture"
                    android:layout_marginTop="50dp"
                    android:layout_width="118dp"
                    android:layout_height="120dp"
                    android:src="@mipmap/picture"/>
                <RelativeLayout
                    android:id="@+id/record_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                    android:id="@+id/record"
                    android:layout_width="115dp"
                    android:layout_height="39dp"
                android:layout_marginTop="6dp"
                    android:background="@mipmap/voice" />

        </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_location"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/location_icon" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="大连外国语大学"
                android:textColor="#A9A9A9" />
        </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:background="@color/white">
                    <ImageView
                        android:id="@+id/at"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/at_icon"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:layout_toRightOf="@id/at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="和谁一起"
                        android:textSize="14dp"
                        android:layout_centerVertical="true"
                        android:textColor="#504F4F"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_addLocation"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/location"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:src="@mipmap/location_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@id/location"
                        android:text="添加地点"
                        android:textColor="#504F4F"
                        android:textSize="14dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RL_permission"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:background="@color/white">
                    <ImageView
                        android:id="@+id/permission_icon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/permission_icon"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@id/permission_icon"
                        android:text="权限设置"
                        android:textColor="#504F4F"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/release_permission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="320dp"
                        android:layout_marginRight="30dp"
                        android:text="公开"
                        android:textColor="#353434" />

                    <TextView
                        android:id="@+id/public_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="360dp"
                        android:layout_marginRight="15dp"
                        android:text=">"
                        android:textColor="@color/black" />


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/RL_time"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:background="@color/white">
                    <ImageView
                        android:id="@+id/memoirs_icon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/memoirs_icon"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@id/memoirs_icon"
                        android:text="回忆定时"
                        android:textColor="#504F4F"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/release_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="240dp"
                        android:layout_marginRight="30dp"
                        android:text="2023/03/24"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/release_time_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="320dp"
                        android:layout_marginRight="15dp"
                        android:text="12:30"
                        android:textColor="@color/black" />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="360dp"
                        android:layout_marginRight="15dp"
                        android:text=">"
                        android:textColor="@color/black" />


                </RelativeLayout>






            </LinearLayout>
        </LinearLayout>

    </ScrollView>






</LinearLayout>