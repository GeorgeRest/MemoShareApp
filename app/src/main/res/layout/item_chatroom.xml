<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/chat_RL"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:paddingTop="7dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <ImageView
            android:id="@+id/chatroom_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/message_comment"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chatroom_name"
            android:text="hhhhh"
            android:textSize="15dp"
            android:layout_toRightOf="@id/chatroom_photo"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chatroom_last_message"
            android:layout_toRightOf="@id/chatroom_photo"
            android:textSize="10dp"
            android:text="你好啊"
            android:ellipsize="end"
            android:layout_alignBottom="@id/chatroom_photo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chatroom_last_message_time"
            android:text="10：23"
            android:textSize="8dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>






</RelativeLayout>