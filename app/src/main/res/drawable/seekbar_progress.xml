<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 默认进度条颜色 -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#cbcbcb" /> <!-- 灰色 -->
        </shape>
    </item>
    <!-- 渐变进度条颜色 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:centerColor="#EECAFF"
                    android:endColor="#CAB5FF"
                    android:startColor="#969AF5"
                    android:type="linear" />
            </shape>
        </clip>
    </item>
</layer-list>
